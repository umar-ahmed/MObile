<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
<LinearLayout
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/LinearLayout1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/accent"
android:paddingBottom="20dp"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="80dp"

tools:context="com.example.admin.mobile_middle_out.SetPrice" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:fontFamily="sans-serif"
            android:text="$0.00"
            android:textColor="@color/text"
            android:textSize="55sp"
            android:id="@+id/textView"
            android:paddingBottom="50px"
            android:layout_gravity="center_horizontal" />


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal" >


            <Button
                android:text="7"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press7"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button android:text="8"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press8"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="9"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press9"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="4"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press4"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="5"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press5"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="6"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press6"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="1"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press1"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="2"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press2"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:text="3"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press3"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>



            <Button
                android:layout_gravity="fill"
                android:layout_column="1"
                android:text="0"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@color/accent"
                android:textSize="42sp"
                android:onClick="press0"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:layout_gravity="fill"
                android:layout_column="2"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/but"
                android:background="@drawable/back1"
                android:textSize="42sp"
                android:onClick="del"
                android:layout_height="70dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="74dp" />




        </GridLayout>

    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONTINUE"
        android:onClick="SaveAndWait"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="22sp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/text"
        android:background="@color/accent"
        android:id="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CANCEL"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="ToMain"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:background="@color/accent"
        android:id="@+id/textView5"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
</LinearLayout>
</ScrollView>
